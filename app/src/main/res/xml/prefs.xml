<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Account">

        <EditTextPreference
            android:title="Username"
            android:key="@string/key_pref_user_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:defaultValue="John Doe"/>
    </PreferenceCategory>



    <PreferenceCategory android:title="Network">
        <ListPreference
            android:title="Zone radius"
            android:key="@string/key_pref_radius_geo_fencing"
            android:entries="@array/entries_pref_radius_geo_fencing"
            android:entryValues="@array/values_pref_radius_geo_fencing"
            android:defaultValue="100"/>
    </PreferenceCategory>


    <PreferenceCategory android:title="More info">
        <Preference
            android:title="Network status"
            android:key="@string/key_pref_network_status">
        </Preference>
        <Preference
            android:title="About the application"
            android:key="@string/key_pref_about_app">
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>